pipeline{
   agent any
   stages{

     stage("Initializing terraform"){
       steps{
          sh '''
          cd /var/lib/jenkins/workspace/deploymentPipeline/Terraform/cluster
          terraform init
          '''
       }
     }
     stage("Terraform Plan"){
       steps{
          sh '''
          cd /var/lib/jenkins/workspace/deploymentPipeline/Terraform/cluster
          terraform plan
          '''
       }
     }
     stage("Terraform apply"){
       steps{
         sh '''
         cd /var/lib/jenkins/workspace/deploymentPipeline/Terraform/cluster
         terraform apply
         '''
       }
     }
   }
}