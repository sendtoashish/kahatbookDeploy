pipeline{
   agent any
   stages{

     stage("Initializing terraform"){
       steps{
          sh '''
          cd /var/lib/jenkins/workspace/deploymentPipeline/Terraform/cluster
          terraform init
          '''
       }
     }
     stage("Terraform Plan"){
       steps{
          sh 'terraform plan'
       }
     }
     stage("Terraform apply"){
       steps{
         sh 'terraform apply'
       }
     }
   }
}