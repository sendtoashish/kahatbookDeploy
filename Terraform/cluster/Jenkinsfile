pipeline{
   agent any
   stages{

     stage("Initializing terraform"){
       steps{
          sh 'terraform init ~/workspace/deploymentPipeline/Terraform/cluster'
       }
     }
     stage("Terraform Plan"){
       steps{
          sh 'terraform plan'
       }
     }
     stage("Terraform apply"){
       steps{
         sh 'terraform apply'
       }
     }
   }
}